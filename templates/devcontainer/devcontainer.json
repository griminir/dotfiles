{
  "name": "dev (template)",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "remoteUser": "vscode",
  "containerUser": "vscode",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "nvmInstallPath": "/home/vscode/.nvm"
    }
  },

  "postCreateCommand": "bash -lc 'set -e; DOTFILES_REPO=https://github.com/griminir/dotfiles.git; DOTFILES_DIR=/home/vscode/.dotfiles; if [ ! -d \"$DOTFILES_DIR\" ]; then git clone --depth 1 \"$DOTFILES_REPO\" \"$DOTFILES_DIR\"; fi; bash \"$DOTFILES_DIR/install.sh\"'",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": ["ms-azuretools.vscode-docker", "eamodio.gitlens"]
    }
  }
}
